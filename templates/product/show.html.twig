{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-5">

            <div class="">
                <a class="btn btn-secondary m-1 ms-0" href="{{ path('app_product_index') }}">back to list</a>
            </div>
            <hr>


            <h1 class="text-light">Product</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-warning m-1 ms-0" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

            {{ include('product/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
